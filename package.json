{
  "name": "bank-ui",
  "version": "0.0.0",
  "private": true,
  "description": "UI for Bank application",
  "license": "UNLICENSED",
  "author": {
    "name": "Ricardo Costa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardocosta/bank-ui"
  },
  "bugs": {
    "url": "https://github.com/ricardocosta/bank-ui/issues"
  },
  "engines": {
    "node": ">=17"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "pnpm lint:format && pnpm lint:eslint && pnpm lint:tsc",
    "lint:dry": "pnpm lint:format:dry && pnpm lint:eslint && pnpm lint:tsc",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx",
    "lint:format": "prettier --write '**/*.{ts,tsx,js,jsx,json,css}'",
    "lint:format:dry": "prettier --check '**/*.{ts,tsx,js,jsx,json,css}'",
    "lint:tsc": "tsc --noEmit",
    "release": "standard-version --sign --skip.tag",
    "release:dry": "standard-version --dry-run",
    "release:tag": "standard-version --skip.bump --skip.changelog --skip.commit"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitejs/plugin-react": "^1.2.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.12.0",
    "eslint-plugin-testing-library": "^5.1.0",
    "prettier": "^2.6.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  }
}
