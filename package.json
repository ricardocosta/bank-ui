{
  "name": "bank-ui",
  "version": "0.0.0",
  "private": true,
  "description": "UI for Bank application",
  "license": "UNLICENSED",
  "author": {
    "name": "Ricardo Costa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardocosta/bank-ui"
  },
  "bugs": {
    "url": "https://github.com/ricardocosta/bank-ui/issues"
  },
  "engines": {
    "node": ">=18.10"
  },
  "scripts": {
    "dev": "vite",
    "seed-db": "tsm ./src/server/initJsonDb.mts && prettier --write ./src/server/db.base.json ./src/server/db.json",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "lint": "yarn lint:format && yarn lint:eslint && yarn lint:tsc",
    "lint:dry": "yarn lint:format:dry && yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx,.mts",
    "lint:format": "prettier --write '**/*.{ts,mts,tsx,js,jsx,json,css}'",
    "lint:format:dry": "prettier --check '**/*.{ts,mts,tsx,js,jsx,json,css}'",
    "lint:tsc": "tsc --noEmit",
    "release": "standard-version --sign --skip.tag",
    "release:dry": "standard-version --dry-run",
    "release:tag": "standard-version --skip.bump --skip.changelog --skip.commit",
    "test": "vitest run --reporter verbose",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --open",
    "test:watch": "vitest watch --reporter verbose"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/dom": "^8.11.4",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/node": "^18.7.23",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitejs/plugin-react": "^1.2.0",
    "@vitest/ui": "^0.7.11",
    "c8": "^7.11.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.12.0",
    "eslint-plugin-testing-library": "^5.1.0",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "standard-version": "^9.3.2",
    "tsm": "^2.2.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.7.10"
  }
}
