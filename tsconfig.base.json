{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "paths": {
      "@ricardocosta/devex": ["libs/devex/src/index.ts"],
      "@ricardocosta/ui-accordion": ["libs/ui/ui-accordion/src/index.ts"],
      "@ricardocosta/ui-button": ["libs/ui/ui-button/src/index.ts"],
      "@ricardocosta/ui-card": ["libs/ui/ui-card/src/index.ts"],
      "@ricardocosta/ui-checkbox": ["libs/ui/ui-checkbox/src/index.ts"],
      "@ricardocosta/ui-editable": ["libs/ui/ui-editable/src/index.ts"],
      "@ricardocosta/ui-form-control": ["libs/ui/ui-form-control/src/index.ts"],
      "@ricardocosta/ui-input": ["libs/ui/ui-input/src/index.ts"],
      "@ricardocosta/ui-layout": ["libs/ui/ui-layout/src/index.ts"],
      "@ricardocosta/ui-menu": ["libs/ui/ui-menu/src/index.ts"],
      "@ricardocosta/ui-modal": ["libs/ui/ui-modal/src/index.ts"],
      "@ricardocosta/ui-popover": ["libs/ui/ui-popover/src/index.ts"],
      "@ricardocosta/ui-provider": ["libs/ui/ui-provider/src/index.ts"],
      "@ricardocosta/ui-radio": ["libs/ui/ui-radio/src/index.ts"],
      "@ricardocosta/ui-select": ["libs/ui/ui-select/src/index.ts"],
      "@ricardocosta/ui-skeleton": ["libs/ui/ui-skeleton/src/index.ts"],
      "@ricardocosta/ui-slider": ["libs/ui/ui-slider/src/index.ts"],
      "@ricardocosta/ui-spinner": ["libs/ui/ui-spinner/src/index.ts"],
      "@ricardocosta/ui-stat": ["libs/ui/ui-stat/src/index.ts"],
      "@ricardocosta/ui-table": ["libs/ui/ui-table/src/index.ts"],
      "@ricardocosta/ui-tag": ["libs/ui/ui-tag/src/index.ts"],
      "@ricardocosta/ui-theme": ["libs/ui/ui-theme/src/index.ts"],
      "@ricardocosta/ui-toggle": ["libs/ui/ui-toggle/src/index.ts"],
      "@ricardocosta/ui-tooltip": ["libs/ui/ui-tooltip/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
